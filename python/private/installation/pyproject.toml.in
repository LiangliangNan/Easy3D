[build-system]
requires = ["setuptools>=42", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "easy3d"
version = "@CONF_Easy3D_VERSION@"
description = "Python bindings for the Easy3D library"
authors = [
    { name = "Liangliang Nan", email = "liangliang.nan@gmail.com" }
]
urls = { Homepage = "https://github.com/LiangliangNan/Easy3D" }
classifiers = [
    "Programming Language :: Python :: 3",
    "License :: OSI Approved :: GPL License",
    "Operating System :: Microsoft :: Windows",
    "Operating System :: POSIX :: Linux",
    "Operating System :: MacOS",
]
requires-python = ">=3.8"  # Specifies Python version requirement
dynamic = ["dependencies"]

[tool.setuptools]
packages = ["easy3d"]

[tool.setuptools.package-data]
easy3d = [
    "@CONF_MODULE_NAME@@CONF_MODULE_SUFFIX@",

    # Platform-specific runtime libraries
    "@CONF_PLATFORM_LIB_PRE@easy3d_core@CONF_PLATFORM_LIB_EXT@",
    "@CONF_PLATFORM_LIB_PRE@easy3d_algo@CONF_PLATFORM_LIB_EXT@",
    "@CONF_PLATFORM_LIB_PRE@easy3d_fileio@CONF_PLATFORM_LIB_EXT@",
    "@CONF_PLATFORM_LIB_PRE@easy3d_gui@CONF_PLATFORM_LIB_EXT@",
    "@CONF_PLATFORM_LIB_PRE@easy3d_kdtree@CONF_PLATFORM_LIB_EXT@",
    "@CONF_PLATFORM_LIB_PRE@easy3d_renderer@CONF_PLATFORM_LIB_EXT@",
    "@CONF_PLATFORM_LIB_PRE@easy3d_util@CONF_PLATFORM_LIB_EXT@",
    "@CONF_PLATFORM_LIB_PRE@easy3d_viewer@CONF_PLATFORM_LIB_EXT@",

    # Python runtime library (platform-specific), e.g.
    #   - Windows: python310.dll
    #   - Linux:   libpython3.10.so
    #   - macOS:   libpython3.10.dylib
    "@CONF_PYTHON_RUNTIME_LIB@"
]
