[build-system]
requires = ["setuptools>=42", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "easy3d"
version = "@Easy3D_VERSION_STRING@"
description = "Python bindings for the Easy3D library"
authors = [
    { name = "Liangliang Nan", email = "liangliang.nan@gmail.com" }
]
urls = { Homepage = "https://github.com/LiangliangNan/Easy3D" }
classifiers = [
    "Programming Language :: Python :: 3",
    "License :: OSI Approved :: GNU General Public License v3 (GPLv3)",
    "Operating System :: Microsoft :: Windows",
    "Operating System :: POSIX :: Linux",
    "Operating System :: MacOS",
]
requires-python = ">=3.8"  # Specifies Python version requirement

[tool.setuptools]
packages = ["easy3d"]
include-package-data = true  # Enable dynamic inclusion of files

# Explicitly specify package data to include
[tool.setuptools.package-data]
easy3d = [
    "*.dylib", "*.so*", "*.pyd", "*.dll",  # Compiled modules and dependencies
    "LICENSE",      # License file
    "README.md",    # ReadMe file
    "resources/*",  # Resources directory (includes all subdirectories)
 ]

[tool.setuptools.exclude-package-data]
easy3d = [".DS_Store"]